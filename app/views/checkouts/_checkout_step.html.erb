<!--https://trello.com/c/YZ0eSj8S/10-implement-creating-an-order-on-request-call-page-->
<%= form_for order, url: update_checkout_path(order.state), html: { id: "checkout_form_#{order.state}" } do |form| %>
  <% if order.state == "address" || !order.email? %>
    <div class="text-input">
      <%= form.label :email, "E-Mail (#{I18n.t("spree.optionally")}):" %>
      <%= form.email_field :email, required: false, placeholder: 'name@example.com' %>
    </div>
  <% end %>

  <%= render "checkouts/steps/#{order.state}_step", form: form, differentiator: @differentiator %>
<% end %>
